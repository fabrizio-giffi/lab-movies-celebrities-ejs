<div class="container d-flex flex-column align-items-center">
  <h2 class="main-header">Create a new Celebrity</h2>
  <form
    class="w-50 d-flex flex-column"
    method="POST"
    action="/celebrities/create"
  >
    <div class="form-group">
      <label for="celeb-name">Name:</label>
      <input
        class="form-control"
        id="celeb-name"
        type="text"
        name="name"
        placeholder="Sean Connery"
      />
    </div>
    <div class="form-group">
      <label for="celeb-occupation">Occupation:</label>
      <select class="form-control" id="celeb-occupation" name="occupation">
        <option value="actor" selected>Actor</option>
        <option value="singer">Singer</option>
        <option value="comedian">Comedian</option>
        <option value="unknown">Unknown</option>
      </select>
    </div>
    <div class="form-group">
      <label for="celeb-catch">Catchphrase:</label>
      <input
        class="form-control"
        id="celeb-catch"
        type="text"
        name="catchPhrase"
        placeholder="Bond. James Bond."
      />
    </div>
    <button class="btn btn-dark" type="submit">Create!</button>
  </form>
</div>