<div class="container d-flex flex-column align-items-center">
  <h2 class="main-header">All the Movies in the DB</h2>
  <div class="w-75">
    <% if (!allMovies.length) { %>
    <h3>There is nothing in the DB.</h3>
    <% } %> <% allMovies.forEach(movie => { %>
    <h4>
      <a class="movie-title" href="/movies/<%- movie._id %> "
        ><%= movie.title %></a
      >
    </h4>
    <hr />
    <% }) %>
  </div>
</div>
