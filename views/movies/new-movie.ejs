<div class="container d-flex flex-column align-items-center">
  <h2 class="main-header">Create a new Movie</h2>
  <form class="w-50 d-flex flex-column" method="POST" action="/movies/create">
    <div class="form-group">
      <label for="movie-title">Title:</label>
      <input
        class="form-control"
        id="movie-title"
        type="text"
        name="title"
        placeholder="007 - Goldfinger"
      />
    </div>
    <div class="form-group">
      <label for="movie-genre">Genre:</label>
      <input
        class="form-control"
        id="movie-genre"
        type="text"
        name="genre"
        placeholder="Action"
      />
    </div>
    <div class="form-group">
      <label for="movie-plot">Plot:</label>
      <input
        class="form-control"
        id="movie-plot"
        type="text"
        name="plot"
        placeholder="James Bond, armed with his specially equipped Aston Martin..."
      />
    </div>
    <div class="form-group">
      <label for="movie-cast">Cast:</label>
      <select class="form-control" id="movie-cast" name="cast" multiple>
        <% allCelebs.forEach(celeb => { %>
        <option value="<%= [celeb._id] %>"><%= celeb.name %></option>
        <% }) %>
      </select>
    </div>
    <button class="btn btn-dark" type="submit">Create!</button>
  </form>
</div>
